    crossorigin="anonymous" referrerpolicy="no-referrer" />

  <link rel="stylesheet" href="./styles/index.css" />
</head>

<body>
  <%- include('partials/header'); -%>

    <div class="container-fluid">
      <div class="row mt-4 p-2">
        <div class="menu col-lg-9">
          <div class="row">
            <div class="ref col">
              <div class="menu-hr"></div>
              <div class="cat-bar">
                <div class="menu-catname">Buns</div>
              </div>
            </div>
          </div>

          <div class="row mt-2 p-3 no-scroll flex-nowrap overflow-auto">
            <% buns.forEach((i,index)=>{%>
              <div class="col-sm-4">
                <div class="card justify-content-evenly  menu-item h-100 align-content">
                  <a class="mt-2">
                    <img class="card-img-top burger" src="<%=i.img%>" alt="Image Unavailable" />
                  </a>
                  <div class="card-body">
                    <h5 class="card-title">
                      <%=i.name%>
                    </h5>
                  </div>
                  <div class="card-footer d-flex justify-content-around">
                    <h3 class="price d-inline-block">₹ <%=i.price%>
                    </h3>
                    <button class="btn btn-danger d-inline-block" onclick="add('<%=i.id%>','buns')">
                      <i class="feature-image fa-solid fa-shopping-cart"></i>Add to cart
                    </button>
                  </div>
                </div>
              </div>
              <%})%>
          </div>
          <div class="row">
            <div class="ref col">
              <div class="menu-hr"></div>
              <div class="cat-bar">
                <div class="menu-catname">Fillers</div>
              </div>
            </div>
          </div>

          <div class="row mt-2 p-3 no-scroll flex-nowrap overflow-auto">
            <% fillers.forEach((i,index)=>{%>
              <div class="col-sm-4">
                <div class="card justify-content-evenly menu-item h-100">
                  <a class="mt-2">
                    <img class="card-img-top burger" src="<%=i.img%>" alt="Image Unavailable" />
                  </a>
                  <div class="card-body">
                    <h5 class="card-title">
                      <%=i.name%>
                    </h5>
                  </div>
                  <div class="card-footer d-flex justify-content-around">
                    <h3 class="price d-inline-block">₹ <%=i.price%>
                    </h3>
                    <button class="btn btn-danger d-inline-block" onclick="add('<%=i.id%>','fillers')">
                      <i class="feature-image fa-solid fa-shopping-cart"></i>Add to cart
                    </button>
                  </div>
                </div>
              </div>
              <%})%>
          </div>
          <div class="row">
            <div class="ref col">
              <div class="menu-hr"></div>
              <div class="cat-bar">
                <div class="menu-catname">Cheese</div>
              </div>
            </div>
          </div>

          <div class="row mt-2 p-3 no-scroll flex-nowrap overflow-auto">
            <% cheese.forEach((i,index)=>{%>
              <div class="col-sm-4">
                <div class="card justify-content-evenly  menu-item h-100">
                  <a class="mt-2">
                    <img class="card-img-top burger" src="<%=i.img%>" alt="Image Unavailable" />
                  </a>
                  <div class="card-body">
                    <h5 class="card-title">
                      <%=i.name%>
                    </h5>

                  </div>
                  <div class="card-footer  d-flex justify-content-around">
                    <h3 class="price d-inline-block">₹ <%=i.price%>
                    </h3>
                    <button class="btn btn-danger d-inline-block" onclick="add('<%=i.id%>','cheese')">
                      <i class="feature-image fa-solid fa-shopping-cart"></i>Add to cart
                    </button>
                  </div>
                </div>
              </div>
              <%})%>
          </div>
          <div class="row">
            <div class="ref col">
              <div class="menu-hr"></div>
              <div class="cat-bar">
                <div class="menu-catname">Non-veg Patties</div>
              </div>
            </div>
          </div>

          <div class="row mt-2 p-3 no-scroll flex-nowrap overflow-auto">
            <% nvp.forEach((i,index)=>{%>
              <div class="col-sm-4">
                <div class="card justify-content-evenly  menu-item h-100">
                  <a class="mt-2">
                    <img class="card-img-top burger" src="<%=i.img%>" alt="Image Unavailable" />
                  </a>
                  <div class="card-body">
                    <h5 class="card-title">
                      <%=i.name%>
                    </h5>

                  </div>
                  <div class="card-footer  d-flex justify-content-around">
                    <h3 class="price d-inline-block">₹ <%=i.price%>
                    </h3>
                    <button class="btn btn-danger d-inline-block" onclick="add('<%=i.id%>','non_veg_patties')">
                      <i class="feature-image fa-solid fa-shopping-cart"></i>Add to cart
                    </button>
                  </div>
                </div>
              </div>
              <%})%>
          </div>
          <div class="row">
            <div class="ref col">
              <div class="menu-hr"></div>
              <div class="cat-bar">
                <div class="menu-catname">Veg Patties</div>
              </div>
            </div>
          </div>

          <div class="row mt-2 p-3 no-scroll flex-nowrap overflow-auto">
            <% vp.forEach((i,index)=>{%>
              <div class="col-sm-4">
                <div class="card justify-content-evenly  menu-item h-100">
                  <a class="mt-2">
                    <img class="card-img-top burger" src="<%=i.img%>" alt="Image Unavailable" />
                  </a>
                  <div class="card-body">
                    <h5 class="card-title">
                      <%=i.name%>
                    </h5>

                  </div>
                  <div class="card-footer  d-flex justify-content-around">
                    <h3 class="price d-inline-block">₹ <%=i.price%>
                    </h3>
                    <button class="btn btn-danger d-inline-block" onclick="add('<%=i.id%>','veg_patties')">
                      <i class="feature-image fa-solid fa-shopping-cart"></i>Add to cart
                    </button>
                  </div>
                </div>
              </div>
              <%})%>
          </div>
          <div class="row">
            <div class="ref col">
              <div class="menu-hr"></div>
              <div class="cat-bar">
                <div class="menu-catname">Sauces</div>
              </div>
            </div>
          </div>

          <div class="row mt-2 p-3 no-scroll flex-nowrap overflow-auto">
            <% sauces.forEach((i,index)=>{%>
              <div class="col-sm-4">
                <div class="card justify-content-evenly  menu-item h-100">
                  <a class="mt-2">
                    <img class="card-img-top burger" src="<%=i.img%>" alt="Image Unavailable" />
                  </a>
                  <div class="card-body">
                    <h5 class="card-title">
                      <%=i.name%>
                    </h5>

                  </div>
                  <div class="card-footer  d-flex justify-content-around">
                    <h3 class="price d-inline-block">₹ <%=i.price%>
                    </h3>
                    <button class="btn btn-danger d-inline-block" onclick="add('<%=i.id%>','sauces')">
                      <i class="feature-image fa-solid fa-shopping-cart"></i>Add to cart
                    </button>
                  </div>
                </div>
              </div>
              <%})%>
          </div>

        </div>
        <div class="cart col-lg-3">
          <div class="cart-form">
            <div class="cart-items">

            </div>
            <div class="d-flex justify-content-between">
              <h3 class="ps-1">Subtotal</h3>
              <h3 class="pe-3" id="subtotal">0</h3>
            </div>
            <hr />
            <button class="btn btn-success d-block mx-auto w-75" onclick="checkout()">
              Checkout
            </button>
            </form>
          </div>
        </div>
      </div>
      <%- include('partials/footer'); -%>

</body>
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
